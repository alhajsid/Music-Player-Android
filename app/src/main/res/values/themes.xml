<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueColor</item>
        <item name="colorPrimaryVariant">@color/lightBlueColor</item>
        <item name="colorOnPrimary">@color/white_80</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="selectedColor">@color/lightBlueColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textStyle" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyleInverse" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dividerStyle">
        <item name="android:background">@color/black_60</item>
    </style>

</resources>